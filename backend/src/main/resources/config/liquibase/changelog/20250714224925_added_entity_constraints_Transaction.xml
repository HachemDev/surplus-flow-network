    <!--
        Added the constraints for entity Transaction.
    -->
    <changeSet id="20250714224925-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="buyer_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__buyer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="seller_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__seller_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"
                                 />

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="transaction"
                                 constraintName="fk_transaction__product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product"
                                 />
    </changeSet>
</databaseChangeLog>
